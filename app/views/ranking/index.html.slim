= link_to 'つぶやく', posts_path, class: "flex justify-center px-4 py-2 absolute top-0 left-0 w-24 sm:w-32 text-sm sm:text-base btn-primary"

.flex.w-full.flex-col.bg-blue-50.sm:bg-transparent data-controller="paginate"
  div.flex.justify-center
    = image_tag('/ranking.png', class: 'h-40')
  table.w-full.flex.flex-row.flex-no-wrap.bg-gray-50.sm:bg-white.rounded-lg.sm:shadow-lg.my-5.sm:h-4/5
    thead.text-white.sm:block
      - @posts.total_count.times do
        tr.bg-teal-400.flex.flex-col.flex-nowrap.mb-2.sm:block.rounded-l-lg.sm:rounded-none.sm:mb-0.sm:w-full
          th.p-3.text-left.sm:inline-block.sm:w-1/12 No
          th.p-3.text-left.sm:inline-block.sm:w-2/12 名前
          th.p-3.text-left.sm:inline-block.sm:w-3/12 メッセージ
          th.p-3.text-left.sm:inline-block.sm:w-4/12 ぼっちわんからの返信
          th.p-3.text-left.sm:inline-block.sm:w-1/12 いいね
          th.p-3.text-left.sm:inline-block.sm:w-1/12 投稿日時
    tbody#ranking_tbody.flex-1.overflow-x-scroll.sm:block.sm:overflow-y-scroll.sm:overflow-x-hidden
      = render partial: 'ranking/post', collection: @posts
  .hidden
    = render partial: 'shared/next_page', object: @posts

css:
   @media (min-width: 640px) {
       table {
          display: table !important;
       }

       thead tr:not(:first-child) {
          display: none;
       }

       tbody {
           height: 90%;
       }

       main {
           background-color: transparent !important;
       }
   }

   td:last-child {
       border: 0;
   }

   th:not(:last-child) {
       border-bottom: 2px solid rgba(0, 0, 0, .1);
   }

   main {
       background-color: white;
   }
